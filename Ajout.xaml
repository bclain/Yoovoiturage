            </Setter>
        </Style>
    </Page.Resources>

    <Grid  Background="#BFF6FF" Margin="-40 0 0 0 " CornerRadius="30 0 0 0 ">

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Button FontWeight="Bold"  HorizontalAlignment="Left" Content="Retour" x:Name="btnRetour" Margin="02 0 20 0"  Style="{StaticResource ButtonNeutre}" Click="btnRetour_Click"/>

            <StackPanel VerticalAlignment="Stretch" Grid.Column="1">
                <TextBlock x:Name="Nom"  Text="Brice Clain" FontSize="35" FontWeight="Bold" Margin="20" Foreground="Black"  />
                <TextBlock  Text="Nouveau trajet" FontSize="15" FontWeight="Bold" Margin="20 5 0 0 " Foreground="Black"  />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Margin="20">

            <Grid  Margin="0 20 0 0 " >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width=".2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" HorizontalAlignment="Stretch" FontWeight="Bold"   x:Name="btnVUS" Margin="0"  Style="{StaticResource ButtonActive}" >
                    <StackPanel Orientation="Horizontal">
                        <Image Width="40"  Margin="0 0 0 0" Source="img/VUS.png"/>
                        <TextBlock  Text="VUS / " FontSize="20" FontWeight="Bold" Margin="20 " Foreground="Black"  />
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" Text="5 " FontSize="30" FontWeight="Bold" Margin="0 5 0 0 " Foreground="Black"  />
                            <TextBlock  Text="places" FontSize="10" FontWeight="Bold" Margin="0 0 0 0 " Foreground="Black"  />
                        </StackPanel>
                        <TextBlock  Text=" / " FontSize="20" FontWeight="Bold" Margin="20 " Foreground="Black"  />
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="20 0 0 0 ">
                            <TextBlock HorizontalAlignment="Center" Text="15$ " FontSize="30" FontWeight="Bold" Margin="0 5 0 0 " Foreground="Black"  />
                            <TextBlock  Text="parp laces" FontSize="10" FontWeight="Bold" Margin="0 0 0 0 " Foreground="Black"  />
                        </StackPanel>
                    </StackPanel>
                </Button>
                <Button Grid.Column="3" HorizontalAlignment="Stretch" FontWeight="Bold"   x:Name="btnBerline" Margin="0"  Style="{StaticResource ButtonNactive}" >
                    <StackPanel Orientation="Horizontal">
                        <Image Width="40"  Margin="0 0 0 0" Source="img/Berline.png"/>
                        <TextBlock  Text="VUS / " FontSize="20" FontWeight="Bold" Margin="20 " Foreground="Black"  />
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Center" Text="3 " FontSize="30" FontWeight="Bold" Margin="0 5 0 0 " Foreground="Black"  />
                            <TextBlock  Text="places" FontSize="10" FontWeight="Bold" Margin="0 0 0 0 " Foreground="Black"  />
                        </StackPanel>
                        <TextBlock  Text=" / " FontSize="20" FontWeight="Bold" Margin="20 " Foreground="Black"  />
                        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="20 0 0 0 ">
                            <TextBlock HorizontalAlignment="Center" Text="10$ " FontSize="30" FontWeight="Bold" Margin="0 5 0 0 " Foreground="Black"  />
                            <TextBlock  Text="parp laces" FontSize="10" FontWeight="Bold" Margin="0 0 0 0 " Foreground="Black"  />
                        </StackPanel>
                    </StackPanel>
                </Button>
            </Grid>
            <Grid  Margin="0 40 0 0 ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width=".2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" HorizontalAlignment="Left">
                    <TextBlock  Text="Date: " FontSize="20" FontWeight="Bold" Margin="0 20 0 0 " Foreground="Black"  />
                    <StackPanel  CornerRadius="15"  VerticalAlignment="Stretch" Padding="10" Background="White" Margin="0 10 0 10 " BorderBrush="Black" BorderThickness="2">
                        <DatePicker x:Name="datetr"  VerticalAlignment="Center" Grid.Column="1" BorderBrush="Transparent" BorderThickness="2" FontSize="20" ></DatePicker>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock  Text="Départ: " FontSize="20" FontWeight="Bold" Margin="0 20 20 10 " Foreground="Black"  />
                    <StackPanel HorizontalAlignment="Center" Padding="10" Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="15" Grid.Column="3" >
                        <ComboBox FontSize="20" CornerRadius="0" HorizontalAlignment="Center" Margin="0 0 0 20" PlaceholderText="Ville" Width="200" BorderThickness="0 0 0 1" BorderBrush="Black"
                         ItemsSource="{Binding Villes}"   />
                        <TimePicker x:Name="debutTimePicker" FontSize="20" BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>

            </Grid>
            <Grid  Margin="0 40 0 0 ">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width=".2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock  Text="Arrivée: " FontSize="20" FontWeight="Bold" Margin="0 20 20 10 " Foreground="Black"  />
                    <StackPanel HorizontalAlignment="Center" Padding="10" Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="15" Grid.Column="3"  >
                        <ComboBox FontSize="20" CornerRadius="0" HorizontalAlignment="Center" Margin="0 0 0 20" PlaceholderText="Ville" Width="200" BorderThickness="0 0 0 1" BorderBrush="Black"
                         ItemsSource="{Binding Villes}"   />
                        <TimePicker x:Name="arrivalTimePicker" FontSize="20" BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <CheckBox x:Name="cb1"  Content="Arrêt:"   VerticalAlignment="Top" Margin="0 20 0 10 " FontSize="20" FontWeight="Bold" />
                    <StackPanel HorizontalAlignment="Center" Visibility="Visible" Padding="10" Background="White" BorderBrush="Black" BorderThickness="2" CornerRadius="15" Grid.Column="3" >
                        <ComboBox FontSize="20" CornerRadius="0" HorizontalAlignment="Center" Margin="0 0 0 20" PlaceholderText="Ville" Width="200" BorderThickness="0 0 0 1" BorderBrush="Black"
                         ItemsSource="{Binding Villes}"   />
                        <TimePicker x:Name="optionTimePicker" FontSize="20" BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
                

            </Grid>
            <Button FontWeight="Bold"  HorizontalAlignment="Center" Content="Partager" x:Name="btnCreer" Margin="80" FontSize="30"  Style="{StaticResource ButtonNormal}" Click="btnCreer_Click"/>

        </StackPanel>




    </Grid>
            
</Page>
